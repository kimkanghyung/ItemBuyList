<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#f5f5f5" /> <!-- 배경 -->
                    <stroke android:width="1dp" android:color="#e9e7e7" /> <!-- 외각선 -->
                    <corners android:radius="0dp" />
                    <padding android:bottom="1dp" android:left="3dp" android:right="3dp" android:top="1dp" />
                </shape>
            </item>
            <!-- 회살표를 넣기위해-->
            <item android:right="10dp">
                <bitmap android:src="@drawable/arrowdown"  android:gravity="center_vertical|right" />
            </item>
        </layer-list>
    </item>
</selector>